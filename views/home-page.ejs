<%- include('header.ejs') %>


<header
  class="w-full p-2 bg-cover bg-center h-64 text-white flex items-center "
  style="background-position: center 30%; background-image: url('https://image.tmdb.org/t/p/original<%= popular_titles[0].backdrop_path %>');"
>

    <div class="relative pt-30">
        <h1 class="text-[26px] font-extrabold p-2"><%= popular_titles[0].original_title %></h1>
        <p class="text-[16px] w-[50%] p-3"><%= popular_titles[0].overview %></p>
        <a href="/user/<%= username %>/<%= popular_titles[0].original_title %>/<%= popular_titles[0].id %>">
            <button class="bg-green-500 rounded-sm p-1 m-3 text-[16px]">Learn More</button>
        </a>
    </div>

    
    
</header>

<div class="movie-section">

    <h1 class="genre-title">Discover</h1>
    <div  class="movie-view" id="popular">
        <% for(let i = 0; i < discover_titles.length; i++){ %>

            <a class="poster" href="/user/<%= username %>/<%= discover_titles[i].original_title %>/<%= discover_titles[i].id %>">

    
            <img class="movie-poster" src= "https://image.tmdb.org/t/p/original/<%= discover_images[i].poster_path %>">  

       
        </a>
        <% } %>
    </div>


<div class="movie-section" >

    <h1 class="genre-title">Popular</h1>
    <div class="movie-view"  id="popular">
        <% for(let i = 0; i < popular_titles.length; i++){ %>
            <a class="poster" href="/user/<%= username %>/<%= popular_titles[i].original_title %>/<%= popular_titles[i].id %>">
            <!-- <h3 style="font-size: 10px;"> <%= popular_titles[i].original_title%></h3> -->
            <img class="movie-poster" src= "https://image.tmdb.org/t/p/original/<%= popular_images[i].poster_path %>">
</a>
        <% } %>
    </div>

</div>

<div  class="movie-section">
    <h1 class="genre-title"> Upcoming</h1>
    <div class="movie-view"id="popular">
        
        <% for(let i = 0; i < upcoming_titles.length; i++){ %>
            <a class="poster" href="/user/<%= username %>/<%= upcoming_titles[i].original_title %>/<%= upcoming_titles[i].id %>">
            <!-- <a class="poster" href="/user/<%= username %>/<%= upcoming_titles[i].original_title %>"> -->

            <!-- <h3 style="font-size: 10px;"> <%= upcoming_titles[i].original_title %></h3> -->
            <img class="movie-poster"  src= "https://image.tmdb.org/t/p/original/<%= upcoming_images[i].poster_path %>">
            </a>
        <% } %>
    </div>
</div>


</div>




<%- include('footer.ejs') %>