<%- include('header.ejs') %>

<header>
    <img src="/displays/poster-background-hlybuowt1whxbh2z.jpg">

    <div class="header-textbox">
        <h1 class="header-title">Movie<span style="color: lime;">Hub</span></h1>
        <p class="header-para">All your movies, in one place.<span style="color: lime;"> All the time. Anywhere.</span></p>
    </div>
    
</header>

<div class="movie-section">

    <h1 class="genre-title">Discover</h1>
    <div  class="movie-view" id="popular">
        <% for(let i = 0; i < discover_titles.length; i++){ %>

            <a class="poster" href="user/<%= username %>/<%= discover_titles[i].original_title %>">

    
            <img class="movie-poster" src= "https://image.tmdb.org/t/p/original/<%= discover_images[i].poster_path %>">  

       
        </a>
        <% } %>
    </div>


<div class="movie-section" >

    <h1 class="genre-title">Popular</h1>
    <div class="movie-view"  id="popular">
        <% for(let i = 0; i < popular_titles.length; i++){ %>
            <a class="poster" href="user/<%=username %> /<%= discover_titles[i].original_title %> %>">
            <!-- <h3 style="font-size: 10px;"> <%= popular_titles[i].original_title%></h3> -->
            <img class="movie-poster" src= "https://image.tmdb.org/t/p/original/<%= popular_images[i].poster_path %>">
</a>
        <% } %>
    </div>

</div>

<div  class="movie-section">
    <h1 class="genre-title"> Upcoming</h1>
    <div class="movie-view"id="popular">
        
        <% for(let i = 0; i < upcoming_titles.length; i++){ %>
            <a class="poster" href="user/<%=username %> /<%= upcoming_titles[i].original_title %> %>">
            <!-- <h3 style="font-size: 10px;"> <%= upcoming_titles[i].original_title %></h3> -->
            <img class="movie-poster"  src= "https://image.tmdb.org/t/p/original/<%= upcoming_images[i].poster_path %>">
            </a>
        <% } %>
    </div>
</div>


</div>




