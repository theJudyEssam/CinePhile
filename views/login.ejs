<%- include('partials/start_header.ejs') %>


<div class="p-10 w-full md:mx-0  text-white">
    <h1 class="text-green-500 text-4xl font-bold mb-6"><span class="text-white">Welcome Back. </span>Log in</h1>
    <form action="/login" method="post" class="space-y-6 border border-green-500 rounded-md p-5">
       
        <div>
            <label class="block text-gray-400 mb-2">Username</label>
            <input 
                name="username" 
                required 
                class="w-[50%] p-3 bg-gray-800 text-gray-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none"
            >
        </div>
        
        
        <div>
            <label class="block text-gray-400 mb-2">Password</label>
            <input 
                type="password" 
                name="password" 
                required 
                class="w-[50%] p-3 bg-gray-800 text-gray-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:outline-none"
            >
        </div>
        
        <!-- Submit Button -->
        <button 
            type="submit" 
            class="py-2 px-4 bg-green-600 hover:bg-green-700 text-white font-bold rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
        >
            Log in
        </button>

        <div class="mt-4">
            <a href="/register" class="text-green-500 hover:underline">
                Don't have an account?
            </a>
        </div>
    </form>
    
    <!-- Register Link -->
   
</div>

<%- include('partials/start_footer.ejs') %>
